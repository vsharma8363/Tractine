<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:ignore="MissingConstraints"
    tools:context=".nav.GallerySearch">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/med_search_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/voces"
                    android:gravity="center"
                    android:text="Medication Search Results"
                    android:textColor="@color/Primary_Overlay2" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="25dp" />

                <ImageView
                    android:id="@+id/gallery_medication_view"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/voces"
                    android:gravity="left"
                    android:text="Name:"
                    android:textColor="@color/Primary_Overlay2" />

                <TextView
                    android:id="@+id/gallery_name_guess"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/voces"
                    android:gravity="left"
                    android:text="Adderall"
                    android:textColor="@color/Primary_Overlay" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/voces"
                    android:gravity="left"
                    android:text="Drug Facts:"
                    android:textColor="@color/Primary_Overlay2" />

                <TextView
                    android:id="@+id/gallery_drug_facts"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/voces"
                    android:gravity="left"
                    android:text="Adderall is used to control features of hyper depressive disorder"
                    android:textColor="@color/Primary_Overlay" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/voces"
                    android:gravity="left"
                    android:text="Instructions on disposal:"
                    android:textColor="@color/Primary_Overlay2" />

                <TextView
                    android:id="@+id/gallery_disposal_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/voces"
                    android:gravity="left"
                    android:text="You can dispose of this medication by simply placing the pills in the trash"
                    android:textColor="@color/Primary_Overlay" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/voces"
                    android:gravity="left"
                    android:text="Disclaimer: Image classification systems may be inaccurate, check with your local DEA field office to be sure the information above is correct"
                    android:textColor="@color/error_disclaimer" />

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>